@model List<LeadDto>

@{
    ViewData["Title"] = "Liste des Leads";
}

<h1>Liste des Leads</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Status</th>
            <th>Phone</th>
            <th>Manager</th>
            <th>Employee</th>
            <th>Customer</th>
            <th>Created at</th>
            <th>Expense</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td>@lead.LeadId</td>
                <td>@lead.Name</td>
                <td>@lead.Status</td>
                <td>@lead.Phone</td>
                <td>@lead.ManagerName</td>
                <td>@lead.EmployeeName</td>
                <td>@lead.CustomerName</td>
                <td>@lead.CreatedAt</td>
                <td id="expense-@lead.LeadId">@lead.Expense</td>
                <td>
                    <a href="#" class="edit-expense" data-id="@lead.LeadId" data-expense="@lead.Expense">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="#" class="delete-expense" data-id="@lead.LeadId" data-expense="@lead.Expense">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Bootstrap -->
<div class="modal fade" id="expenseModal" tabindex="-1" role="dialog" aria-labelledby="expenseModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="expenseModalLabel">Update Expense</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="leadId">
                <div class="form-group">
                    <label for="newExpense">New amount:</label>
                    <input type="text" class="form-control" id="newExpense">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveExpense">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Expense</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="leadIdDel">
                <p>Delete this expense?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteExpense">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".edit-expense").click(function () {
                var leadId = $(this).data("id");
                var expense = $(this).data("expense");

                $("#leadId").val(leadId);
                $("#newExpense").val(expense);

                $("#expenseModal").modal("show");
            });
            $(".delete-expense").click(function(){
                var leadId = $(this).data("id"); 
                $("#leadIdDel").val(leadId);
                $("#deleteModal").modal("show");
            })
            $("#saveExpense").click(function () {
                var leadId = $("#leadId").val();
                var newExpense = $("#newExpense").val();

                fetch('http://localhost:8080/api/dashboards/leads/update-expense', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    credentials:'include',
                    body: JSON.stringify({ id: leadId, amount: newExpense })
                })
                .then(response => {
                    if (!response.ok) {
                        console.log(response);
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        $("#expense-" + leadId).text(newExpense);
                        $("#expenseModal").modal("hide");
                    } else {
                        alert("Erreur : " + data.message);
                    }
                })
                .catch(error => {
                    console.log(error);
                    alert("Une erreur s'est produite.");
                });
            });
            $("#deleteExpense").click(function () {
                var leadId = $("#leadIdDel").val();
                var newExpense = '0';

                fetch('http://localhost:8080/api/dashboards/leads/delete-expense', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    credentials:'include',
                    body: JSON.stringify({ id: leadId, amount: newExpense })
                })
                .then(response => {
                    if (!response.ok) {
                        console.log(response);
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        $("#expense-" + leadId).text(newExpense);
                        $("#deleteModal").modal("hide");
                    } else {
                        alert("Erreur : " + data.message);
                    }
                })
                .catch(error => {
                    console.log(error);
                    alert("Une erreur s'est produite.");
                });
            });
        });
    </script>
}
