@model List<TicketDto>

@{
    ViewData["Title"] = "Liste des Tickets";
}

<h1>Tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Subject</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Created by</th>
            <th>Assigned Employee</th>
            <th>Customer</th>
            <th>Created At</th>
            <th>Expense</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.Subject</td>
                <td>@ticket.Description</td>
                <td>@ticket.Status</td>
                <td>@ticket.Priority</td>
                <td>@ticket.EmployeeName</td>
                <td>@ticket.CustomerName</td>
                <td>@ticket.ManagerName</td>
                <td>@ticket.CreatedAt</td>
                <td id="expense-@ticket.TicketId">@ticket.Expense 
                </td>
                <td>
                    <span>
                        <a href="#" class="edit-expense" data-id="@ticket.TicketId" data-expense="@ticket.Expense">
                            <i class="fas fa-edit"></i>
                        </a>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="expenseModal" tabindex="-1" role="dialog" aria-labelledby="expenseModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="expenseModalLabel">Update Expense</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="ticketId">
                <div class="form-group">
                    <label for="newExpense">New Amount</label>
                    <input type="text" class="form-control" id="newExpense">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveExpense">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".edit-expense").click(function () {
                var ticketId = $(this).data("id");
                var expense = $(this).data("expense");

                $("#ticketId").val(ticketId);
                $("#newExpense").val(expense);

                $("#expenseModal").modal("show");
            });

            $("#saveExpense").click(function () {
                var ticketId = $("#ticketId").val();
                var newExpense = $("#newExpense").val();

                fetch('http://localhost:8080/api/dashboards/tickets/update-expense', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    credentials:'include',
                    body: JSON.stringify({ id: ticketId, amount: newExpense })
                })
                .then(response => {
                    if (!response.ok) {
                        console.log(response);
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        $("#expense-" + ticketId).text(newExpense);
                        $("#expenseModal").modal("hide");
                    } else {
                        alert("Erreur : " + data.message);
                    }
                })
                .catch(error => {
                    console.log(error);
                    alert("Une erreur s'est produite.");
                });
            });
        });
    </script>
}