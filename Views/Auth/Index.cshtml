@{
    ViewData["Title"] = "Vérification Email - CRM";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    
    <!-- Bootstrap + Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <style>
        body {
            background-color: #f8fafc;
        }
        .crm-card {
            max-width: 450px;
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        }
        .crm-header {
            border-bottom: 1px solid #e2e8f0;
            border-radius: 12px 12px 0 0;
        }
        .crm-btn {
            background-color: #4f46e5;
            transition: all 0.2s;
        }
        .crm-btn:hover {
            background-color: #4338ca;
            transform: translateY(-1px);
        }
        .form-control:focus {
            border-color: #a5b4fc;
            box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.1);
        }
    </style>
</head>
<body class="d-flex align-items-center min-vh-100">
    <div class="container">
        <div class="crm-card mx-auto bg-white">
            <!-- En-tête CRM -->
            <div class="crm-header p-4 text-center">
                <h4 class="text-gray-800"><i class="fas fa-users me-2 text-gray-600"></i> CRM</h4>
            </div>
            
            <!-- Formulaire -->
            <div class="p-4">
                <form method="post" asp-action="CheckEmail">
                    <div class="mb-4">
                        <label class="form-label text-gray-600 mb-2">
                            <i class="fas fa-envelope me-2 text-gray-500"></i>Email
                        </label>
                        <input type="email" class="form-control form-control-lg border-gray-300" 
                               id="email" name="email" placeholder="your@email.com" required>
                    </div>
                    
                    <button type="submit" class="btn crm-btn btn-lg w-100 text-white py-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </button>
                </form>
                
                <!-- Message de retour -->
                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-light border mt-4 text-gray-700">
                        <i class="fas fa-info-circle me-2 text-indigo-500"></i> 
                        @ViewData["Message"]
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>